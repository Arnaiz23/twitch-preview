---

<aside class="h-full bg-[#1f1f23] text-white">
  <div class="w-full xl:flex items-center justify-between px-3 py-1 hidden">
    <h2 class="capitalize font-bold">For You</h2>
    <ButtonIcons title="Collapse" position="right">
      <button><CollapseIcon /></button>
    </ButtonIcons>
  </div>
  <div class="w-full grid place-items-center xl:hidden p-3">
    <FollowingIcon classes="size-5 fill-zinc-400" />
  </div>
  <ChannelsListContainer channels={followedChannels} hover={true}>
    <h3 class="uppercase font-bold text-xs">Followed Channels</h3>
    <button><SortIcon /></button>
  </ChannelsListContainer>
  <div class="w-full grid place-items-center xl:hidden p-3">
    <VideoIcon classes="size-5 fill-zinc-400" />
  </div>
  <ChannelsListContainer channels={recommendedChannels} hover={false}>
    <h3 class="uppercase font-bold text-xs">Recommended Channels</h3>
  </ChannelsListContainer>
  <div class="w-full grid place-items-center xl:hidden p-3">
    <VideoIcon classes="size-5 fill-zinc-400" />
  </div>
  <ChannelsListContainer channels={alsoChannels} hover={false}>
    <h3 class="uppercase font-bold text-xs">DessT3 viewers also watch</h3>
