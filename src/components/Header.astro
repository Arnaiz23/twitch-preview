---
import TwitchIcon from "@/components/Icons/Twitch.astro";
import CrownIcon from "@/components/Icons/Crown.astro";
import InboxIcon from "@/components/Icons/Inbox.astro";
import WhisperIcon from "@/components/Icons/Whisper.astro";
import BitsIcon from "@/components/Icons/Bits.astro";
import BatteryIcon from "@/components/Icons/Battery.astro";
import UserIcon from "@/components/Icons/User.astro";
import DotsVertical from "@/components/Icons/DotsVertical.astro";
import ButtonIcons from "@/components/ButtonIcons.astro";
import Search from "@/components/Search.astro";
import BrowseIcon from "@/components/Icons/Browse.astro";
import FolllowingIcon from "@/components/Icons/Following.astro";
import TooltipIconLeft from "./TooltipIconLeft.astro";
---

<header
  class="w-full text-white flex justify-between items-center px-3 py-1 shadow-[0px_0px_0px_1px_rgba(0,0,0,0.06),0px_1px_1px_-0.5px_rgba(0,0,0,0.06),0px_3px_3px_-1.5px_rgba(0,0,0,0.06),_0px_6px_6px_-3px_rgba(0,0,0,0.06),0px_12px_12px_-6px_rgba(0,0,0,0.06),0px_24px_24px_-12px_rgba(0,0,0,0.06)] gap-4"
>
  <nav class="flex gap-4 font-bold text-xl items-center w-max">
    <TwitchIcon size="size-7" />

    <TooltipIconLeft title="Following">
      <FolllowingIcon classes="group-hover:fill-violet-400 size-5" />
    </TooltipIconLeft>
    <TooltipIconLeft title="Browse">
      <BrowseIcon classes="group-hover:fill-violet-400" />
    </TooltipIconLeft>

    <a href="#" class="hidden md:block text-sm xl:text-lg">Following</a>
    <a href="#" class="hidden md:block text-sm xl:text-lg">Browse</a>
    <ButtonIcons title="More" position="bottom">
      <DotsVertical size="size-5" />
    </ButtonIcons>
  </nav>

  <Search />

  <section class="flex items-center justify-center gap-3">
    <ButtonIcons title="New from Prime" position="bottom">
      <CrownIcon size="size-5" />
    </ButtonIcons>
    <ButtonIcons title="Notifications" position="bottom">
      <InboxIcon size="size-5" />
    </ButtonIcons>
    <ButtonIcons title="Whispers" position="bottom">
      <WhisperIcon size="size-5" />
    </ButtonIcons>
    <ButtonIcons title="Get Bits" position="bottom">
      <BitsIcon size="size-5" />
    </ButtonIcons>
    <ButtonIcons title="Get Ad-Free" position="bottom" classes="xl:hidden">
      <BatteryIcon size="size-5" />
    </ButtonIcons>
    <div
      class="items-center justify-evenly gap-2 bg-[#34343b] py-1 px-2 rounded text-sm font-bold text-pretty hidden xl:flex"
    >
      <BatteryIcon size="size-5" />
      <p class="text-sm font-semibold">Get Ad-Free</p>
    </div>
    <span class="p-1 rounded-full bg-zinc-300 cursor-pointer">
      <UserIcon size="size-6 text-black" />
    </span>
  </section>
</header>

<style>
  header {
    grid-area: header;
  }
</style>

<!-- Input search responsive, only the button stay with the same size -->
