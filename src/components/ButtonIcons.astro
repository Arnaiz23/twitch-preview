---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<span class="hover:bg-zinc-700 p-1 rounded transition-all relative group cursor-pointer">
  <slot />
  <div
    class="absolute top-[120%] left-2/4 -translate-x-2/4 w-max opacity-0 group-hover:opacity-100 transition-all duration-500 pointer-events-none"
  >
    <span
      class="absolute left-2/4 w-0 h-0 border-b-8 border-b-white border-r-[6px] border-r-transparent border-l-[6px] border-l-transparent bottom-full -translate-x-2/4"
    ></span>
    <p class="p-1 bg-white text-black w-max rounded text-sm font-bold">
      {title}
    </p>
  </div>
</span>
